<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_news_img"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/empty" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="5dp"
                android:text="新闻标题"
                android:textColor="?android:textColorPrimary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="5dp">
                <TextView
                    android:id="@+id/tv_news_praise"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:drawableLeft="@mipmap/voice_iscollected"
                    android:drawablePadding="5dp"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:id="@+id/tv_news_mtime"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="昨天"
                    android:drawableLeft="@mipmap/recom_time_ico"
                    android:drawablePadding="5dp"
                    />
                <TextView
                    android:id="@+id/tv_news_views"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="1111"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/voice_read_icon"
                    android:drawablePadding="5dp"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

